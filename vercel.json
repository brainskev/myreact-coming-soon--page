// vercel.json

{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": {
          "builder": "@vercel/node",
          "options": {
            "maxDuration": 300,
            "NODE_OPTIONS": "--openssl-legacy-provider"
          }
        }
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }
  